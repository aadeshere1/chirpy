
<div class="container">
  <div class="row">
    <main class="col s6 offset-s3 z-depth-3 signup-details">
      <h4 class="signup-center"><%= t('.Enter_Details')%></h4>
        <%= form_for @profile, html:{class: 'chirpy-form'}  do |f| %>
        <div class="field input-field">
          <p><%= t('.Name')%></p>
          <%= f.text_field :name %>
        </div>

        <div class="field input-field">

        <p><%= t('.Age')%></p>
        <%= f.select :age, (18..80).map {|i| [i,i] }, required: true, class: 'form-control' %>
            </div>
        <div class="field input-field ">
          <p><%= t('.Profile_Photo')%></p>
          <%= f.file_field :image  %>
        </div>
        <div class="field input-field">
        <p> <%= t('.About_Me')%></p>
        <%= f.text_field :bio %>
        </div>
        <div class="field input-field">
        <p><%= t('.Gender')%></p>
        <%= f.select :gender,%w{Male Female}, required: true, placeholder: 'Gender', class: 'form-control' %>
        </div>

        <%= fields_for @language, html:{class: 'chirpy-form'}  do |f| %>
          <div class="field input-field" id="lang">
          <p><%= t('.Native_Language')%></p>
            <%= image_tag("#{format_language(@lang_native)}.png") %>
            <%= f.hidden_field :language_native, :value => @lang_native%>
          </div>
            <div class="field input-field" id="lang">
              <p><%= t('.Language_To_Learn')%></p>
              <%= f.select(:language_target, @languagesArray.map { |lang| [ lang, lang ] }, required: true, class: 'form-control')  %>
            </div>

           <div class="field input-field" id="prof">
            <p><%=t('.Level')%></p>

            <%= f.select :proficiency, ['Beginner', 'Average', 'Fluent'], required: true, class: 'form-control' %>
            </div>
        <% end %>


      <div class="actions">
        <%= f.submit t('.Create_Profile', :default => "Create Profile"), class: 'waves-effect waves-light btn log-in-button white' %>
      </div>

<% end %>

</main>
  </div>
</div>
