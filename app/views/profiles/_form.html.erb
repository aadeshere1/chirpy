
    <main class="z-depth-3 chirpy-form form-page">
      <h2 class="signup-center"><%= t('.Enter_Details')%></h2>
        <%= form_for @profile, html:{class: 'chirpy-form'}  do |f| %>
        <div class="field input-field">
          <label><%= t('.Name')%></label>
          <%= f.text_field :name %>
        </div>

        <div class="field input-field">

        <label><%= t('.Age')%></label>
        <%= f.select :age, (18..80).map {|i| [i,i] }, required: true, class: 'form-control' %>
            </div>
        <div class="field input-field ">
          <label><%= t('.Profile_Photo')%></label>
          <%= f.file_field :image %>
        </div>
        <div class="field input-field">
        <label> <%= t('.About_Me')%></label>
        <%= f.text_field :bio %>
        </div>
        <div class="field input-field">
        <label><%= t('.Gender')%></label>
        <%= f.select(:gender, @genderArray, required: true, class: 'form-control') %>

        </div>

        <%= fields_for @language, html:{class: 'chirpy-form'}  do |f| %>
          <div class="field input-field" id="lang">

          <label><%= t('.Native_Language')%></label>
            <%= image_tag("#{format_language(@lang_native)}.png") %>
            <%= f.hidden_field :language_native, :value => @lang_native%>
          </div>
            <div class="field input-field" id="lang">

              <label><%= t('.Language_To_Learn')%></label>
              <%= f.select(:language_target, @languagesArray, required: true, class: 'form-control')  %>

            </div>

           <div class="field input-field" id="prof">
            <label><%=t('.Level')%></label>

            <%= f.select(:proficiency, @proficiencyArray, required: true, class: 'form-control') %>
            </div>
        <% end %>


        <div><%= f.submit t('.Create_Profile', :default => "Create Profile"), class: 'waves-effect waves-light btn log-in-button white' %></div>

<% end %>

</main>
