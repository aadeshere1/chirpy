<main class="chirpy-form form-page">
      <h2><%= t('.Edit_Profile')%></h2>

<%= form_for @profile, html:{class: 'chirpy-form'} do |f| %>

  <label><%= t('.Name')%></label>
  <label><%= f.text_field :name %></label>
  <label><%= t('.Age')%></label>
  <label><%= f.text_field :age %></label>
  <label><%= t('.Profile_Photo')%></label>
  <label><%= f.file_field :image %></label>
  <label> <%= t('.About_Me')%></label>
  <label><%= f.text_field :bio %></label>
  <label><%= t('.Gender')%></label>
  <label><%= f.select(:gender, @genderArray, class: 'form-control', selected: @profile.gender) %></label>

  <ul>
    <% @language.each do |lang| %>
      <li>
        <label><%= t('.Language_To_Learn')%>: <%= select_tag(:language_target, options_for_select(@languagesArray, selected: @lang_target)) %></label>

        <label><%= t('.Current_Level')%>: <%= select_tag(:proficiency, options_for_select(@proficiencyArray, selected: lang.proficiency)) %></label>
      </li>
    <% end %>
  </ul>

  <%= f.submit t(".Update_Profile", :default => "Update Profile"), class: 'btn white' %>

  <% end %>
</main>